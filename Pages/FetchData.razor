@page "/fetchdata"
@using PetShopMetrics.Models
@inject MonitoringAPIClient ForecastService

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr>
                    <td>@forecast.Id.ToString()</td>
                    <td>@forecast.Category</td>
                    <td>@forecast.DateAndTime</td>
                    <td>@forecast.NumberRecordsReturned</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<MerchandiseFilter> forecasts;

    protected override async Task OnInitializedAsync()
    {
        forecasts = await ForecastService.GetMerchandiseFilter();
    }
}
